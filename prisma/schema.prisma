// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  createAt     DateTime @default(now())
  updateAt     DateTime @updatedAt
  username     String   @unique
  password     String
  email        String   @unique
  isAdmin      Boolean  @default(false)
  refreshToken String?
  order        Order[]
}

model Product {
  id          Int         @id @default(autoincrement())
  createAt    DateTime    @default(now())
  updateAt    DateTime    @updatedAt
  title       String      @unique
  description String      @default("Product description")
  imgUrl      String      @default("https://upload.wikimedia.org/wikipedia/commons/thumb/6/65/No-Image-Placeholder.svg/1665px-No-Image-Placeholder.svg.png")
  price       Decimal     @default(0)
  category    Category[]
  OrderItem   OrderItem[]
}

model Category {
  id        Int      @id @default(autoincrement())
  type      String   @unique
  Product   Product? @relation(fields: [productId], references: [id])
  productId Int?
}

model Order {
  id        Int         @id @default(autoincrement())
  status    OrderStatus @default(NEW)
  createdAt DateTime    @default(now())
  updateAt  DateTime    @updatedAt
  orderItem OrderItem[]
  User      User        @relation(fields: [userId], references: [id])
  userId    Int
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  Order     Order   @relation(fields: [orderId], references: [id])
  orderId   Int
  productId Int
}

enum OrderStatus {
  NEW
  APPROVED
  CANCELED
}
